{
  "name": "random-web-server",
  "version": "1.0.0",
  "main": "dist/index.js",
  "author": "dan-lovelace <dlovelace085@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -b",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon\"",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "showdown": "^2.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.9.0",
    "@types/showdown": "^2.0.4",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "nodemonConfig": {
    "watch": [
      "pages",
      "public",
      "src"
    ],
    "ext": "css,html,js,json,md,ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "ts-node --esm ./src/index.ts"
  },
  "engines": {
    "node": ">=18"
  }
}
